@using OmniTalks.Models.PostViewModel
@model PostViewModel

<form asp-action="Edit" asp-controller="Post">
	<div class="container" style="margin-top:200px;">
		<div class="row justify-content-center align-items-center">
			<div class="col-xl-3 col-lg-4 full-widt">
				<div class="d-block d-lg-none position-absolute end-0 top-0">
					<button class="button profile-close">
						<i class="material-symbols-outlined mat-icon fs-xl"> close </i>
					</button>
				</div>
				<div class="head-area mb-5">
					<h3 class="text-center">Edit Post</h3>
				</div>
				<div class="profile-picture d-flex gap-2 mb-5 align-items-center">
					<div class="text-area">
						<h6 class="m-0 mb-1"><a href="profile-post.html">@Model.UserName</a></h6>
					</div>
				</div>
				<div asp-for="" class="input-area first mb-3">
					<select asp-for="@Model.CategoryId" class="form-control" asp-items="@ViewBag.CategoriesList"></select><div class="nice-select form-control" tabindex="0">
				</div>
				</div>
				<div class="input-area second mb-3" >
					<textarea asp-for="Content" cols="10" rows="2" placeholder=@Model.Content></textarea>
				</div>
				<div class="btn-area text-end">
					<button class="cmn-btn">Next</button>
				</div>
			</div>
		</div>
	</div>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial">
}
