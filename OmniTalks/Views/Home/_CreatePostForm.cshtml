@using OmniTalks.Models.PostViewModel
@model PostViewModel
<div class="share-post d-flex gap-3 gap-sm-5 p-3 p-sm-5">
	<div class="profile-box">
		<a href=@($"/User/OtherProfile/{ViewBag.CurrentUserId}")>@* <img src=@Url.Content(Model.UserPhotoUrl.ToString()) class="max-un" alt="icon"> *@</a>
	</div>
	<form asp-action="Add" asp-controller="Post" method="post" class="w-100 position-relative">
		<textarea asp-for="Content" cols="10" rows="2" placeholder="Let's spill the tea! Share your juicy ideas here... 🎉💭"></textarea>
		<div asp-for="" class="input-area first">
			<select asp-for="@Model.CategoryId" class="form-control" asp-items="@ViewBag.CategoriesList"></select>
		</div>
		<ul class="d-flex justify-content-between flex-wrap mt-3 gap-3">
			<li>
				<button class="cmn-btn px-2 px-sm-5 px-lg-6">
					<i class="material-symbols-outlined mat-icon m-0 fs-xxl"> near_me </i>
				</button>
			</li>
		</ul>
	</form>
</div>