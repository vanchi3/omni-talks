        @foreach (var item in Model)
        {
            <div class="profile-area d-center justify-content-between">
                <div class="avatar-item d-flex gap-3 align-items-center">
                    <div class="avatar-item">
                        <img class="avatar-img max-un" src=@Url.Content(item.ProfilePhotoUrl.ToString()) alt="avatar" width="48">
                    </div>
                    <div class="info-area">
                        <h6 class="m-0"><a href="public-profile-post.html" class="mdtxt">@item.UserName</a></h6>
                    </div>
                </div>
                <div class="btn-group cus-dropdown dropend">
                    <button type="button" class="dropdown-btn" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="material-symbols-outlined fs-xxl m-0"> more_horiz </i>
                    </button>
